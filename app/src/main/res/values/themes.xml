<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParroquiaSanPedroPovedaJaén" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.ParroquiaSanPedroPovedaJaén.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CategoryChip"
        parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="Theme.ParroquiaSanPedroPovedaJaén.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ParroquiaSanPedroPovedaJaén.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>